---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import { blogs } from "../data";
---

<Layout>
  <section class="bg-white lg:rounded-2xl dark:bg-[#111111]">
    <div class="container px-4 sm:px-5 md:px-10 lg:px-[60px]">
      <div class="pb-12">
        <h2 class="after-effect after:left-32 mt-12 lg:mt-0">Blogs</h2>
        <div
          class="grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 mt-[30px] grid gap-x-10 gap-y-7 mb-6"
        >
          {
            blogs.map((item) => {
              return (
                <div class="p-5 rounded-lg mb-2 h-full bg-[#fcf4ff] dark:bg-transparent dark:border-[#212425] dark:border-2">
                  <div class="overflow-hidden rounded-lg">
                    <a href={item.link} rel="modal:open">
                      <img
                        class="rounded-lg w-full cursor-pointer transition duration-200 ease-in-out transform hover:scale-110"
                        src={item.img}
                        alt="blog image"
                      />
                    </a>
                  </div>
                  <div class="flex mt-4 text-tiny text-gray-lite dark:text-[#A6A6A6]">
                    <span>{item.date}</span>
                    <span class="dot-icon">{item.category}</span>
                  </div>
                  <h3 class="text-lg font-medium dark:text-white duration-300 transition cursor-pointer mt-3 pr-4 hover:text-[#FA5252] dark:hover:text-[#FA5252]">
                    <a href={item.link} rel="modal:open">
                      {item.title}
                    </a>
                  </h3>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>

    <!-- footer section start -->
    <footer
      class="overflow-hidden rounded-b-2xl bg-[#f8fbfb] dark:bg-[#212425]"
    >
      <p class="text-center py-6 text-gray-lite dark:text-color-910">
        Â© 2022 All Rights Reserved by <a
          class="hover:text-[#FA5252] duration-300 transition"
          href="../themeforest.net/user/ib-themes.html"
          target="_blank"
          rel="noopener noreferrer">ib-themes</a
        >.
      </p>
    </footer>
    <!-- footer section end -->
  </section>
</Layout>
